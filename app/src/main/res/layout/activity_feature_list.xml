<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E6F0FA"
    android:paddingTop="16dp">

    <!-- Judul dengan Nuansa Islami -->
    <TextView
        android:id="@+id/textViewFitur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruang Tenang"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dekorasi Garis (Mengganti dengan View Sederhana) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6B705C"
        app:layout_constraintTop_toBottomOf="@id/textViewFitur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Checklist Ibadah Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardChecklistIbadah"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#A5D6A7"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/textViewFitur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reminderCard"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•Œ"
                android:textSize="70sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checklist Ibadah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Reminder Ibadah Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/reminderCard"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#A5D6A7"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/textViewFitur"
        app:layout_constraintStart_toEndOf="@id/cardChecklistIbadah"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•°ï¸"
                android:textSize="70sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Ibadah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- DASS Test Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDASSQuestionnaire"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#A5D6A7"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/cardChecklistIbadah"
        app:layout_constraintStart_toStartOf="@id/cardChecklistIbadah"
        app:layout_constraintEnd_toStartOf="@id/cardMoodTracker"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="70sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test DASS"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mood Tracker Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMoodTracker"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#A5D6A7"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/reminderCard"
        app:layout_constraintStart_toEndOf="@id/cardDASSQuestionnaire"
        app:layout_constraintEnd_toEndOf="@id/reminderCard"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="70sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood Tracker"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_state"
        app:itemTextColor="@color/nav_item_state"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>