<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/moodTrackerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFF0F6">

    <!-- Header with Welcome Text, User Name, and Profile Photo -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Left Section: Welcome Text and User Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to Live in Peace"
                    android:textSize="14sp"
                    android:textColor="#324F5E" />

                <!-- User Name -->
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eshlie Alcantaro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#324F5E"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Right Section: Profile Photo -->
            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Profile Photo"
                android:scaleType="centerCrop"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bagaimana mood kamu hari ini?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#324F5E"
                android:layout_marginTop="16dp"
                android:layout_gravity="start"/>

            <LinearLayout
                android:id="@+id/moodSelectionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:descendantFocusability="blocksDescendants">

                <ImageView
                    android:id="@+id/moodAngry"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_angry"
                    android:contentDescription="Marah"
                    android:layout_margin="8dp"
                    android:background="@drawable/mood_selector"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/moodSad"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_sad"
                    android:contentDescription="Sedih"
                    android:layout_margin="8dp"
                    android:background="@drawable/mood_selector"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/moodAnxious"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_anxious"
                    android:contentDescription="Cemas"
                    android:layout_margin="8dp"
                    android:background="@drawable/mood_selector"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/moodCalm"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calm"
                    android:contentDescription="Tenang"
                    android:layout_margin="8dp"
                    android:background="@drawable/mood_selector"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/moodHappy"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_happy"
                    android:contentDescription="Senang"
                    android:layout_margin="8dp"
                    android:background="@drawable/mood_selector"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/moodLineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_state"
        app:itemTextColor="@color/nav_item_state"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>